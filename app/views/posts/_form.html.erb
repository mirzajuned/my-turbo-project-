<%= turbo_frame_tag dom_id(post) do %>
  <%= form_with model: post, url: post.persisted? ? post_path(post) : posts_path, local: false do |f| %>
    <div class="mb-4">
      <%= f.label :title, class: "block text-gray-700 font-bold" %>
      <%= f.text_field :title, class: "w-full px-4 py-2 border rounded-md" %>
    </div>

    <div class="mb-4">
      <%= f.label :content, class: "block text-gray-700 font-bold" %>
      <%= f.text_area :content, class: "w-full px-4 py-2 border rounded-md" %>
    </div>

    <div class="flex space-x-2">
      <%= f.submit "Update", class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition" %>
      <%= link_to "Cancel", post, class: "bg-gray-500 text-white px-4 py-2 rounded hover:bg-gray-600 transition" %>
    </div>
  <% end %>
<% end %>